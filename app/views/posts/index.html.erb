<h1>See What Other Poeple Said...</h1>

<%= link_to 'Leave Me a Meesage', :action => :new %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>
	
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title%></td>
			<td><%= post.text%></td>
			<td><%= link_to 'Show', :action => :show, :id => post.id %></td>
			<td><%= link_to 'Edit', :action => :edit, :id => post.id %></td>
			<td><%= link_to 'Delete', { :action => :destroy, :id => post.id }, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
		</tr>
	<% end %>	
</table>